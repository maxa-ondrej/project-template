{
    "name": "maxa-ondrej/project-template",
    "description": "Template for php projects.",
    "type": "library",
    "minimum-stability": "stable",
    "license": "GPL-3.0-only",
    "authors": [
        {
            "name": "Ond≈ôej Maxa",
            "homepage": "http://ondrej.maxa.expert",
            "email": "ondrej@maxa.expert"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "tests/unit/"
        }
    },
    "require": {
        "php": "^7.4"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master",
        "codeception/codeception": "^4.1",
        "codeception/module-phpbrowser": "^1.0.0",
        "codeception/module-asserts": "^1.0.0"
    },
    "scripts": {
        "codecept": "codecept run",
        "codecept-steps": "codecept run --steps"
    },
    "config": {
        "platform": {
            "php": "7.4"
        },
        "sort-packages": true
    }
}